generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id             String               @id @default(uuid())
  name           String
  email          String               @unique
  password       String
  currentStyleId String?
  volume         Int                  @default(70)
  isPlaying      Boolean              @default(false)
  isAutoMode     Boolean              @default(false)
  isActive       Boolean              @default(true)
  lastPlayedAt   DateTime?
  role           String               @default("STORE")
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  accentColor    String               @default("green")
  city           String?
  country        String?
  groupId        String?
  storeType      String?
  activityLogs   ActivityLog[]
  playSessions   PlaySession[]
  style          MusicStyle?          @relation("CurrentStyle", fields: [currentStyleId], references: [id])
  group          StoreGroup?          @relation(fields: [groupId], references: [id])
  favorites      StoreFavorite[]
  schedules      StoreSchedule[]
  styleProgress  StoreStyleProgress[]
  userAccess     UserStoreAccess[]

  @@index([groupId])
  @@index([city])
  @@index([isActive])
}

model StoreGroup {
  id             String   @id @default(uuid())
  name           String   @unique
  description    String?
  color          String   @default("#1db954")
  defaultStyleId String?
  defaultVolume  Int      @default(70)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  stores         Store[]
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Système de gestion d'équipe
model User {
  id           String            @id @default(uuid())
  name         String
  email        String            @unique
  password     String
  avatar       String?
  role         UserRole          @default(VIEWER)
  isActive     Boolean           @default(true)
  lastLoginAt  DateTime?
  invitedBy    String?
  invitedAt    DateTime?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  storeAccess  UserStoreAccess[]
  activityLogs UserActivityLog[]

  @@index([email])
  @@index([role])
}

enum UserRole {
  OWNER
  ADMIN
  MANAGER
  EDITOR
  VIEWER
}

// Permissions par magasin pour chaque utilisateur
model UserStoreAccess {
  id        String   @id @default(uuid())
  userId    String
  storeId   String
  canEdit   Boolean  @default(false)
  canPlay   Boolean  @default(true)
  canSchedule Boolean @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([userId, storeId])
  @@index([userId])
  @@index([storeId])
}

// Logs d'activité des utilisateurs Team
model UserActivityLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  target    String?
  details   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model MusicStyle {
  id            String               @id @default(uuid())
  name          String
  slug          String               @unique
  description   String
  mixUrl        String?
  coverUrl      String?
  duration      Int                  @default(3600)
  icon          String?
  colorTheme    String?
  playSessions  PlaySession[]
  stores        Store[]              @relation("CurrentStyle")
  favorites     StoreFavorite[]
  schedules     StoreSchedule[]
  styleProgress StoreStyleProgress[]
}

model StoreSchedule {
  id        String     @id @default(uuid())
  storeId   String?
  styleId   String
  startTime String
  endTime   String
  store     Store?     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  style     MusicStyle @relation(fields: [styleId], references: [id], onDelete: Cascade)
}

model StoreStyleProgress {
  id           String     @id @default(uuid())
  storeId      String
  styleId      String
  lastPosition Int        @default(0)
  store        Store      @relation(fields: [storeId], references: [id], onDelete: Cascade)
  style        MusicStyle @relation(fields: [styleId], references: [id], onDelete: Cascade)

  @@unique([storeId, styleId])
}

model PlaySession {
  id          String     @id @default(uuid())
  storeId     String
  styleId     String
  startedAt   DateTime   @default(now())
  endedAt     DateTime?
  totalPlayed Int        @default(0)
  store       Store      @relation(fields: [storeId], references: [id])
  style       MusicStyle @relation(fields: [styleId], references: [id])
}

model StoreFavorite {
  id        String     @id @default(uuid())
  storeId   String
  styleId   String
  createdAt DateTime   @default(now())
  store     Store      @relation(fields: [storeId], references: [id], onDelete: Cascade)
  style     MusicStyle @relation(fields: [styleId], references: [id], onDelete: Cascade)

  @@unique([storeId, styleId])
}

model ActivityLog {
  id        String   @id @default(uuid())
  storeId   String
  action    String
  details   String?
  createdAt DateTime @default(now())
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@index([storeId, createdAt])
}
